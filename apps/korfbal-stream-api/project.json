{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "@korfbal-stream-kit/korfbal-stream-api",
  "projectType": "application",
  "root": "apps/korfbal-stream-api",
  "sourceRoot": "apps/korfbal-stream-api/src",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "platform": "node",
        "outputPath": "dist/apps/korfbal-stream-api",
        "format": ["cjs"],
        "bundle": false,
        "main": "apps/korfbal-stream-api/src/main.ts",
        "tsConfig": "apps/korfbal-stream-api/tsconfig.app.json",
        "assets": [
          {
            "input": "apps/korfbal-stream-api",
            "glob": ".env",
            "output": "."
          },
          {
            "input": "apps/korfbal-stream-api",
            "glob": "prisma/schema.prisma",
            "output": "."
          }
        ],
        "generatePackageJson": true,
        "esbuildOptions": {
          "sourcemap": true,
          "outExtension": {
            ".js": ".js"
          }
        }
      },
      "configurations": {
        "development": {},
        "production": {
          "generateLockfile": true,
          "esbuildOptions": {
            "sourcemap": false,
            "outExtension": {
              ".js": ".js"
            }
          }
        }
      }
    },
    "package": {
      "executor": "@nx/js:package",
      "dependsOn": ["build"],
      "options": {
        "outputPath": "dist/apps/korfbal-stream-api",
        "project": "apps/korfbal-stream-api/project.json",
        "externalDependencies": "all"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx watch apps/korfbal-stream-api/src/main.ts"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx watch apps/korfbal-stream-api/src/main.ts"
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "options": {
        "passWithNoTests": false,
        "reportsDirectory": "apps/korfbal-stream-api/test-results"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": [
          "apps/korfbal-stream-api/**/*.ts"
        ]
      }
    },
    "typecheck": {
      "executor": "@nx/js:tsc",
      "options": {
        "tsConfig": "apps/korfbal-stream-api/tsconfig.app.json",
        "noEmit": true
      }
    },
    "docker:run": {
      "executor": "@nx/docker:run",
      "options": {
        "image": "korfbal-stream-api:latest",
        "ports": [
          "3000:3000"
        ],
        "env": {
          "NODE_ENV": "production",
          "HOST": "0.0.0.0",
          "PORT": "3000"
        }
      }
    },
    "docker:build": {
      "dependsOn": ["package"],
      "executor": "@nx/docker:build",
      "options": {
        "context": ".",
        "file": "apps/korfbal-stream-api/Dockerfile",
        "tags": [
          "your-registry/korfbal-stream-api:latest"
        ],
        "push": true
      }
    }
  },
  "tags": []
}
